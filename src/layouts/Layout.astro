---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida COnsole,
      "Courier New",
      monospace;
    letter-spacing: -0.025rem;
	background-color: #fff;
	transition: 0.3s ease all;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
    transition: 0.3s ease all;
  }

  .dark {
    background: #0e0e0f;
    color: #f1f1f1;
  }

  a {
    text-decoration: none;
    color: #111;
  }

  body.dark a,
  body.dark h1 {
    color: #f1f1f1 !important;
  }

  body.dark h2{
	color: #cac9c9 !important;
  }

  body.dark h3{
	color: #d3d3d3 !important;
  }

  body.dark h4{
	color: #a7a4a4 !important;
  }

  body.dark p {
	color: #acacac !important;
  }

  body.dark a:hover{
	text-decoration: underline;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  /* @media (prefers-color-scheme: dark) {
		html {
			background: #000;
			color: #fff;
		}
	}
 */
  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }
</style>
