---
const {title} = Astro.props;

const {titleEN} = Astro.props;
---

<section>
    {title && <h2 class="es">{title}</h2>}
    {titleEN && <h2 class="en hide">{titleEN}</h2>}
    <slot/>
</section>

<style>
    section{
        max-width: 700px;
        margin: 0 auto 48px;
    }

    h2 {
        margin-bottom: 8px;
        font-weight: 700;
        line-height: 1.5;
        font-size: 1.5rem;
    }
</style>