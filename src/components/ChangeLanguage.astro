<button class="switch" id="switch-language">
  <span
    ><img
      alt="United States"
      src="http://purecatamphetamine.github.io/country-flag-icons/3x2/US.svg"
    /></span
  >
  <span
    ><img
      alt="United States"
      src="http://purecatamphetamine.github.io/country-flag-icons/3x2/UY.svg"
    /></span
  >
</button>

<script>
  const btnSwitch = document.querySelector("#switch-language");

  btnSwitch.addEventListener("click", () => {
    const aux = document.querySelector(".es");
    const textosES = document.querySelectorAll(".es");
    const textosEN = document.querySelectorAll(".en");
    const currentLang = aux.classList.contains("hide")
      ? "en"
      : "es";
    btnSwitch.classList.toggle("active");
    if (currentLang === "es") {
      textosES.forEach((texto) => {
        texto.classList.add("hide");
      });
      textosEN.forEach((texto) => {
        texto.classList.remove("hide");
      });
    } else {
      textosEN.forEach((texto) => {
        texto.classList.add("hide");
      });
      textosES.forEach((texto) => {
        texto.classList.remove("hide");
      });
    }
  });
</script>

<style>
  button span {
    width: 27px;
    height: 27px;
    line-height: 30px;
    display: block;
    background: none;
  }
  .switch {
    color: #161616;
    border-radius: 1000px;
    border: none;
    position: relative;
    cursor: pointer;
    display: flex;
    outline: none;
    gap: 8px;
    width: 60px;
  }

  button::after {
    content: "";
    display: block;
    width: 30px;
    height: 30px;
    position: absolute;
    background: #f1f1f1;
    top: 0px;
    left: -0px;
    right: unset;
    border-radius: 1000px;
    transition: 0.5s ease all;
    box-shadow: 0px 0px 2px 2px rgba(0, 0, 0, 0.2);
  }

  .active {
    color: #f1f1f1;
  }

  .dark{
    background-color: #212121;
  }

  .active::after {
    right: -1px;
    left: unset;
  }

  @media print{
    .switch{
      display: none;
    }
  }
</style>
