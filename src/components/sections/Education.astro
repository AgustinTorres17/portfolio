---
import Section from "../Section.astro";
import { education } from "@cv";
---

<Section title="Formación Académica">
  <ul>
    {
      education.map(
        ({
          institution,
          url,
          area,
          studyType,
          startDate,
          endDate,
          score,
          courses,
        }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Present";
          const period = `${startYear} - ${endYear}`;
          return (
            <li>
              <article>
                <header>
                  <div>
                    <a href={url} target="_blank">
                      {institution}
                    </a>
                    <h4>{`${area} - ${studyType}`}</h4>
                    <p>{`Promedio: ${score}`}</p>
                  </div>
                  <time>{period}</time>
                </header>
                <footer>
                    {courses && (
                      <h3>Cursos destacados</h3>
                    <ul>
                      {courses.map((course) => (
                        <p>{course}</p>
                      ))}
                    </ul>
                  )}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  footer ul {
    gap: 2px;
  }

  footer {
    gap: 10px;
  }

  footer h3 {
    margin-bottom: 3px;
    color: #111;
    font-weight: 500;
    font-size: 1em;
    
  }
  article a {
    font-weight: 500;
    color: #111;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    font-size: 1.2em;
    transition: hover 0.3s ease;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: first baseline;
    margin-bottom: 4px;
  }

  time {
    font-size: 0.85em;
    color: #777;
  }
</style>
