---
import { languages } from "@cv";
import Section from "@/components/Section.astro";
---

<Section title="Idiomas">
  <ul>
    {
      languages.map(({ language, fluency }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  {language === "Inglés" && (
                    <a href="/StatementOfResult.pdf" download="CertificadoFCEAgustinTorres.pdf"><h3>{language}</h3></a>
                    
                    <img
                      alt="United States"
                      src="http://purecatamphetamine.github.io/country-flag-icons/3x2/US.svg"
                      
                    />
                  )}
                  {language === "Español" && (
                    <h3>{language}</h3>
                    <img
                      alt="United States"
                      src="http://purecatamphetamine.github.io/country-flag-icons/3x2/UY.svg"
                    
                    />
                  )}
                </div>
                <p>{fluency}</p>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  article header div {
    display: flex;
    flex-direction: row;
    align-items: first baseline;
    gap: 8px;
  }

  article header div img{
    width: 15px;
    height: 14px;
    object-fit: cover;
    border-radius: 5px;
  }
  article {
    border-radius: 8px;
    border: 1px solid #d8d8d8;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article h3 {
    margin-bottom: 8px;
    display: inline;
  }

  article a:hover {
    text-decoration: underline;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
    font-weight: 500;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  @media print {
    header div img {
      display: none;
    }
  }
</style>
